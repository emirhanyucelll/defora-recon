{
  "manifest_version": 3,
  "name": "DEFORA RECON",
  "version": "1.4",
  "description": "3000+ Teknoloji Imzasi ve NIST Arsenal ile Eksiksiz Keşif Aracı.",
  "permissions": ["storage", "activeTab", "scripting", "alarms", "unlimitedStorage", "webRequest"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["rules.js", "content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["probe.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "host_permissions": ["<all_urls>"]
}