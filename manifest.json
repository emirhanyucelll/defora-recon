{
  "manifest_version": 3,
  "name": "DEFORA RECON",
  "version": "1.4",
  "description": "3000+ Teknoloji Imzasi ve NIST Arsenal ile Eksiksiz Keşif Aracı.",
  "icons": {
    "16": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  },
  "permissions": ["storage", "activeTab", "scripting", "alarms", "unlimitedStorage", "webRequest"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
        "16": "icons/icon.png",
        "48": "icons/icon.png",
        "128": "icons/icon.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["rules.js", "content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["probe.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "host_permissions": ["<all_urls>"],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src https://emirhanyucelll.github.io/"
  }
}